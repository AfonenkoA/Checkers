@using Site.Data.Models.UserIdentity;
@model IIdentity;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkers Online</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Site.styles.css" asp-append-version="true" />
</head>
<body>

    <h1 style="text-align: center;">Checkers Online</h1>
<hr>
<style contenteditable>
    .icon {
        margin: 0px 10px 10px 0px;
        border: 3px solid black;
        float: left
    }
    a {
        text-decoration: none;
        color: darkblue;
    }
</style>
<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <button style="height:50px;width:160px">
                        <a class="nav-link text-dark"
                           asp-controller="Authorization"
                           asp-action="Login"
                           asp-route-callerController="Home"
                           asp-route-userId="@Model?.UserId"
                           asp-route-callerAction="Index">Войти</a>
                    </button>
                </li>
                <li class="nav-item">
                    <button style="height:50px;width:160px">
                        <a class="nav-link text-dark"
                           asp-controller="User"
                           asp-action="PersonalArea"
                           asp-route-login="@Model?.Login"
                           asp-route-password="@Model?.Password"
                           asp-route-userId="@Model?.UserId"
                           asp-route-type="@Model?.Type">Личный кабинет</a>
                    </button>
                </li>
                <li class="nav-item">
                    <button style="height:50px;width:160px">
                        <a class="nav-link text-dark"
                           asp-controller="User"
                           asp-action="TopPlayers"
                           asp-route-login="@Model?.Login"
                           asp-route-password="@Model?.Password"
                           asp-route-userId="@Model?.UserId"
                           asp-route-type="@Model?.Type">Лучшие игроки</a>
                    </button>
                </li>
                <li class="nav-item">
                <button style="height:50px;width:160px">
                    <a class="nav-link text-dark"
                       asp-controller="News"
                       asp-action="Index"
                       asp-route-login="@Model?.Login"
                       asp-route-password="@Model?.Password"
                       asp-route-userId="@Model?.UserId"
                       asp-route-type="@Model?.Type">Новости</a>
                </button>
                <li class="nav-item">
                <button style="height:50px;width:160px">
                    <a class="nav-link text-dark"
                       asp-controller="Chat"
                       asp-action="CommonChat"
                       asp-route-login="@Model?.Login"
                       asp-route-password="@Model?.Password"
                       asp-route-userId="@Model?.UserId"
                       asp-route-type="@Model?.Type">Общий чат</a>
                </button>
                <li class="nav-item">
                    <button style="height:50px;width:160px">
                        <a class="nav-link text-dark"
                           asp-controller="Forum"
                           asp-action="Index"
                           asp-route-login="@Model?.Login"
                           asp-route-password="@Model?.Password"
                           asp-route-userId="@Model?.UserId"
                           asp-route-type="@Model?.Type">Форум</a>
                    </button>
                </li>
            </ul>
        </div>
            
    </div>
</nav>

<div class="container">
             
    @RenderBody()
                
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
