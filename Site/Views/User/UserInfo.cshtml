@using Site.Data.Models.User;
@using Site.Data.Models.UserIdentity;
@model IIdentified<UserInfo>
@{
    Layout = null;
}
<img src="@Model?.Value.Picture.Url" width="100" height="100">
<a asp-controller="User"
   asp-action="Profile"
   asp-route-id="@Model?.Value.Id"
   asp-route-login="@Model?.Login"
   asp-route-type="@Model?.Type"
   asp-route-userId="@Model?.UserId"
   asp-route-password="@Model?.Password">@Model?.Value.Nick</a>
<p>Был в сети: @Model?.Value.LastActivity</p>
<p>@Model?.Value.SocialCredit</p>
<p>@Model?.Value.Type</p>