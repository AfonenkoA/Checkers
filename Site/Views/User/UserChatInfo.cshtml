@using Site.Data.Models.User;
@using Site.Data.Models.UserIdentity;
@model IIdentified<UserInfo>
@{
    Layout = null;
}
<div class="icon"><img src="@Model?.Value.Picture.Url" width="60" height="60"></div>
<p><b>Никнейм: </b>
    <a asp-controller="User"
       asp-action="Profile"
       asp-route-id="@Model?.Value.Id"
       asp-route-login="@Model?.Login"
       asp-route-type="@Model?.Type"
       asp-route-userId="@Model?.UserId"
       asp-route-password="@Model?.Password">@Model?.Value.Nick</a></p>


